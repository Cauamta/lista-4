#include <stdio.h>
#include <stdlib.h>
/*
Aluno:cauã mata
Matricula:2412130053
*/


int main() {
    int valores[5];
    int soma = 0;
    float media = 0.0;

    for (int i = 0; i < 5; i++) {
        printf("Digite um valor: ");
        scanf("%d", &valores[i]);
        soma += valores[i];
    }

    printf("Valores lidos:");
    for (int i = 0; i < 5; i++) {
        printf(" %d", valores[i]);
    }

    media = soma / 5.0;
    printf("\nMédia: %.2f\n", media);

    return 0;
}
